function palindrome(str) {
	var rts = "";
	var transformedString = str.toLowerCase();
	transformedString = transformedString.replace(/[^a-zA-Z0-9]/g,""); // the _ was screwing things up, so I had to do the list instead of /W, solved!
	
	for (var i = (transformedString.length - 1); i >= 0; i--) {
    	rts += transformedString[i];
  }
	if (transformedString == rts) {
		return true;
} 	else {
		console.log(str);
		console.log(rts);
		console.log(transformedString);
		return false;
	}
}

palindrome("0_0 (: /-\ :) 0-0");
